<Page
    x:Class="ProjetFinal.AjoutMateriel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjetFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Ajout de materiel"
                       HorizontalAlignment="Center"
                       FontSize="60"
                       Margin="0,0,0,20"/>
            <TextBox x:Name="txtIDMateriel"
                     Header="Numéro d'identification unique" TextChanged="txtIDMateriel_TextChanged"/>
            <TextBlock x:Name="txtIDMaterielErr"
                       Foreground="Red"
                       Margin="0,0,0,10"/>
            <TextBox x:Name="txtMarqueMateriel"
                     Header="Marque" TextChanged="txtMarqueMateriel_TextChanged"/>
            <TextBlock x:Name="txtMarqueMaterielErr"
                       Foreground="Red"
                       Margin="0,0,0,10"/>
            <TextBox x:Name="txtModelMateriel"
                     Header="Model" TextChanged="txtModelMateriel_TextChanged"/>
            <TextBlock x:Name="txtModelMaterielErr"
                       Foreground="Red"
                       Margin="0,0,0,10"/>
            <ComboBox x:Name="cbEtat"
                      HorizontalAlignment="Stretch"
                      Header="État"
                      SelectionChanged="cbEtat_SelectionChanged">
                
                <ComboBoxItem x:Name="EDisponible"
                              Content="Disponible"/>
                <ComboBoxItem x:Name="ELocation"
                              Content="En location"/>
                <ComboBoxItem x:Name="EDefect"
                              Content="Defectueux"/>
                <ComboBoxItem x:Name="ERepair"
                              Content="En réparation"/>
            </ComboBox>
            <TextBlock x:Name="txtEtatMaterielErr"
                       Foreground="Red"
                       Margin="0,0,0,10"/>

            <TextBox x:Name="txtNoteMateriel"
                     Header="Note"
                     Height="90"
                     TextWrapping="Wrap"
                     AcceptsReturn="True" TextChanged="txtNoteMateriel_TextChanged"/>
            <TextBlock x:Name="txtNoteMaterielErr"
                       Foreground="Red"
                       Margin="0,0,0,10"/>
            <Button x:Name="btnAddMateriel"
                    Content="Ajouter"
                    CornerRadius="10"
                    Background="DeepSkyBlue"
                    HorizontalAlignment="Stretch" Click="btnAddMateriel_Click"/>

        </StackPanel>

    </Grid>
</Page>
