<Page
    x:Class="ProjetFinal.AjoutMateriel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjetFinal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Ajout de materiel"
                       HorizontalAlignment="Center"
                       FontSize="60"
                       Margin="0,0,0,20"/>
            <TextBox x:ConnectionId='2' x:Name="txtIDMateriel"
                     Header="Numéro d'identification unique"                                        />
            <TextBlock x:ConnectionId='3' x:Name="txtIDMaterielErr"
                       Foreground="Red"
                       Margin="0,0,0,10"/>
            <TextBox x:ConnectionId='4' x:Name="txtMarqueMateriel"
                     Header="Marque"                                            />
            <TextBlock x:ConnectionId='5' x:Name="txtMarqueMaterielErr"
                       Foreground="Red"
                       Margin="0,0,0,10"/>
            <TextBox x:ConnectionId='6' x:Name="txtModelMateriel"
                     Header="Model"                                           />
            <TextBlock x:ConnectionId='7' x:Name="txtModelMaterielErr"
                       Foreground="Red"
                       Margin="0,0,0,10"/>
            <ComboBox x:ConnectionId='8' x:Name="cbEtat"
                      HorizontalAlignment="Stretch"
                      Header="État"
                                                                >
                
                <ComboBoxItem x:ConnectionId='13' x:Name="EDisponible"
                              Content="Disponible"/>
                <ComboBoxItem x:ConnectionId='14' x:Name="ELocation"
                              Content="En location"/>
                <ComboBoxItem x:ConnectionId='15' x:Name="EDefect"
                              Content="Defectueux"/>
                <ComboBoxItem x:ConnectionId='16' x:Name="ERepair"
                              Content="En réparation"/>
            </ComboBox>
            <TextBlock x:ConnectionId='9' x:Name="txtEtatMaterielErr"
                       Foreground="Red"
                       Margin="0,0,0,10"/>

            <TextBox x:ConnectionId='10' x:Name="txtNoteMateriel"
                     Header="Note"
                     Height="90"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"                                          />
            <TextBlock x:ConnectionId='11' x:Name="txtNoteMaterielErr"
                       Foreground="Red"
                       Margin="0,0,0,10"/>
            <Button x:ConnectionId='12' x:Name="btnAddMateriel"
                    Content="Ajouter"
                    CornerRadius="10"
                    Background="DeepSkyBlue"
                    HorizontalAlignment="Stretch"                             />

        </StackPanel>

    </Grid>
</Page>

